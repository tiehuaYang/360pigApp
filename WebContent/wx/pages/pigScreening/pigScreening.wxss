/* pages/pigScreening/pigScreening.wxss */
.screening-content {
  padding: 30px;
  background: #f9f9f9;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding-bottom: 52px;
}
.item-options {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  margin-bottom: 10px;
}
.input-group {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.item-title {
  padding: 10px;
  color: #777;
  margin-top: 10px;
}
.item-options text {
  background: #fff; 
  padding: 5px 15px;
  color: #969696;
  border: 1px solid #969696;
  margin-right: 15px;
}
.item-options text.actived{
  color: #34917e;
  border: 1px solid #34917e;
}
.input-group input {
  background: #fff;
  border: 1px solid #969696;
  width: 80px;
  height: 29px;
  padding: 0 10px;
  color: #999;
}
.input-group text {
  margin: 0 10px;
}
.picker-view {
  width: 100%;
  background: #fff;
  padding: 5px 10px;
  border: 1px solid rgba(0,0,0,.1);
  box-sizing:border-box;
}
.btn-group-foot {
  display: flex;
  justify-content: space-between;
  box-sizing:border-box;
  position: absolute;
  bottom: 0;
  left: 30px;
  right: 30px;
}
.btn-group-foot button {
  margin: 10px 0;
  width: 100%;
  line-height: 32px;
  color: #34917e;
  padding: 2px;
  font-size: 16px;
}
.btn-group-foot button.comfirm{
  background: #34917e;
  color: #fff;
}
.from-time, .to-time {
  display: flex;
  flex-direction: row;
}
.to-time {
  padding-top: 20px;
}
.fromInput, .toInput {
  border: 1px solid rgba(0,0,0,.1);
  border-radius: 2px;
  margin-left: 5px;
  margin-top: -5px;
  background-color: #FFF;
  width: 200px;
  padding: 4px;
  margin-top: -2px;
}
.btn-group-foot {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-bottom: 20px;
  letter-spacing: 2px;
}
.cancel, .resetting {
  border: 1px solid #34917e;
}