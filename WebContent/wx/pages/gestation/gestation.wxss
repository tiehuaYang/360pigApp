/* pages/gestation/gestation.wxss */
.gestation-page {
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.1);
}
.search-input {
  width: 300px;
  height: 35px;
  background-color: #F8F8F8;
  border-radius: 5px;
  margin-left: 20px;
  margin-bottom: 10px;
}
.pigs-section1 {
  background-color: #FFF;
  padding: 5px 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid rgba(0,0,0,.1);
  border-top: 1px solid rgba(0,0,0,.1);
}
.scroll-view {
  position: absolute;
  top: 57px;
  bottom: 0;
  width: 100%;
}

/** wxss **/
/** 修改button默认的点击态样式类**/
.filter-btn, .add-btn {
  width: 55px !important;
  height: 28px;
  font-size: 12px;
  color: #FFF;
  line-height: 28px;
  background-color: #34917e;
  padding: 0 !important;
  margin-left: 10px;
}
.filter-btn .iconfont, .add-btn .iconfont {
  position: relative;
  bottom: -1px;
}
.top-btn-group {
  width: 130px;
  display: flex;
}

.searchbar {
  flex-grow: 1;
}
.gestation-total, .gestation-detail {
  margin: auto;
  background-color: #fff;
  border-radius: 5px;
  margin-top: 10px;
  font-size: 12px;
}

.gestation-total {
  padding: 10px 10px 30px 10px;
  width: 90%;
}

.gestation-detail {
  width: 90%;
  padding: 10px;
  color: rgba(0, 0, 0, 0.5);
  
}

.extra-msg {
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  padding-bottom: 10px;
}

.left-txt, .right-txt {
  color: #444;
  font-weight: bold;
  letter-spacing: 2px;
}

.right-txt {
  float: right;
}

.extra-txt {
  padding-top: 10px;
  line-height: 25px;
  letter-spacing: 2px;
  color: rgba(0, 0, 0, 0.5);
  font-weight: bold;
}
.gestation-msg {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.gestation-txt {
  width: 80%;
  display: flex;
  flex-direction: row;
  font-weight: bold;
  border-right: 1px solid rgba(0, 0, 0, 0.1);
}

.gestation-btn {
  width: 20%;
  float: right;
  display: flex;
  justify-content: center;
  align-items: center;
}

.gestation-btn text {
  font-size: 30px;
  color: #34917e;
}

.gestation-right {
  padding-left: 20px;
}

.gestation-left, .gestation-right {
  display: flex;
  flex-direction: column;
  line-height: 30px;
}

.date-txt {
  font-size: 12px;
  color: #34917e;
  
}
