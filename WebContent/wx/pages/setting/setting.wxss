.page-head {
  border-radius: 4px;
  padding: 13px;
  background-color: rgba(0,0,0,.01);
}
.customer-txt {
  border-radius: 5px;
  font-size: 12px;
  color: #444;
  line-height: 25px;
  font-weight: bold;
  background-color: #FFF;
  display: flex;
  padding: 20px;
  flex-direction: row;
}
.head-pic {
  width: 120px;
  height: 120px;
  margin-top: -10px;
}
.setting-section1, .setting-section2, .setting-section3 {
  background-color: #FFF;
}
.setting-section2, .setting-section3 {
  margin-top: 10px;
}
.txt-msg {
  display: flex;
  flex-direction: column;
}
.person-name {
  font-size: 16px;
}
.person-phone {
  font-size: 15px;
}
.pig-num, .firm-address {
  font-size: 14px;
  color: rgba(0,0,0,.5);
}
.page-set {
  width: 100%;
  height: 100%;
}
.setting-item {
  width: 100%;
  height: 45px;
  line-height: 45px;
  border-bottom: 1px solid rgba(0,0,0,.1);
  clear: both;
}
.item-left {
  width: 30%;
  float: left;
  font-size: 14px;
  color: rgba(0,0,0,.9);
  padding-left: 20px;
  display:flex;
  align-items:center;
}
.item-left>.iconfont {
  padding-right:8px;
  font-size:20px;
}
.item-right {
  width: 8%;
  float: right;
  font-size: 14px;
  position: relative;
}
.icon-baocun {
  padding-right: 3px;
  opacity: .6;
}
.icon-config-account, .icon-guanyuwomen {
  padding-right: 3px;
}
.own-badge {
  position: absolute;
  width: 6px;
  height: 6px;
  background: red;
  border-radius: 50%;
  top: 50%;
  left: -10px;
  margin-top: -3px;
}