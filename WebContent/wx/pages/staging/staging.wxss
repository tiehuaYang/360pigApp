.deal-today, .current-storage {
  width: 95%;
  background-color: rgba(0,0,0,.001);
  margin: auto;
  padding-top: 10px;
}
.deal-content, .storage-content {
  background-color: #FFF;
  border-radius: 5px;
}
.deal-msg, .storage-msg {
  width: 100%;
  padding-top: 10px;
  padding-bottom: 10px;
  border-bottom: 1px solid rgba(0,0,0,.1);
}
.deal-txt, .storage-txt {
  font-size: 15px;
  display: flex;
  justify-content: center;
}
.icon-renwu1 {
  font-weight: 600;
  padding-left: 4px;
}
.task-show, .storage-show {
  display: flex;
  flex-direction: column;
  padding-bottom: 20px;
}
.row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 5px 50px;
  margin-top: 10px;
}
.row text {
  font-size: 14px;
  font-weight: bold;
  color: rgba(0,0,0,.3);
}
.row .num {
  font-size: 18px;
  color: #444;
  font-weight: 550;
}
.remark-msg {
  height: 30px;
  border-radius: 4px;
  border-top: 1px solid rgba(0,0,0,.3);
  width: 210px;
  margin-top: -4px;
  background-color: rgba(0,0,0,.03);
}
.row2 text {
  font-weight: bold;
  color: rgba(0,0,0,.4);
}
.row2 {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 20px;
  width: 100%;
}
