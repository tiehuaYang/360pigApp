/* pages/siteManage/siteManage.wxss */
.site-manage-content {
  background-color: #F8F8F8;
  box-sizing: border-box;
  height: 100%;
}
.site-summary {
  display: flex;
  flex-direction: column;
  background-color: #FFF;
  border-top: 1px solid #DDD;
  padding: 20px;
  color: #9c9c9c;
  font-size: 13px;
  line-height: 22px;
  position: relative;
}
.site-title {
  font-size: 16px;
  color: #333;
  margin-bottom: 10px;
}
.iconfont.edit-site {
  position: absolute;
  top: 20px;
  right: 20px;
  margin: 0;
  color: #34917e;
  font-size:25px;
}

.item-content {
  margin-top: 15px;
  display: flex;
  flex-direction: column;
  background-color: #FFF;
  padding: 0 7px 0 15px;
}
.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 8px 12px 5px;
  border-bottom: 1px solid #ccc;
}
.last {
  border-bottom: none;
}
.iconfont {
  position: relative;
  top: 1px;
  padding: 0 5px;
  margin-right: 10px;
  font-size: 18px;
}
.farmManager {
  margin-left: 15px;
}
.icon-shanchuxiang {
  color: #e74c3c;
}