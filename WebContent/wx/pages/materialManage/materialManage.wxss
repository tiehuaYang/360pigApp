.pigs-section1 {
  background-color: #FFF;
  padding: 5px 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid rgba(0,0,0,.1);
  border-top: 1px solid rgba(0,0,0,.1);
}
.filter-btn, .add-btn {
  width: 55px !important;
  height: 28px;
  font-size: 12px;
  color: #FFF;
  line-height: 28px;
  background-color: #34917e;
  padding: 0 !important;
  margin-left: 10px;
}
.filter-btn .iconfont, .add-btn .iconfont {
  position: relative;
  bottom: -1px;
}
.searchbar {
  flex-grow: 1;
}
.top-btn-group {
  width: 60px;
  display: flex;
}

.material-list {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 20px;
  box-shadow:0px 1px 5px #ccc;
  margin-top:4px;
}
.material-r {
  display: flex;
  flex-direction: column;
  font-size: 12px;
}
.material-state text,
.material-phase text {
  color: #9c9c9c;
}
