/* pages/entering/entering.wxss */
.containers {
  background-color: rgba(0,0,0,.1);
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.content-section {
  background-color: #FFF;
  width: 95%;
  margin: 10px auto;
  border-radius: 5px;
}
.pig-pic {
  width: 100%;
  height: 180px;
  border-radius: 5px;
  padding-top: 12px;
}
.pic-section {
  width: 95%;
  margin: auto;
  background-color: rgba(0,0,0,.001);
}
.enter-icon {
  display: flex;
  flex-direction: column;
  padding: 18px;
  
}
.enter-icon image {
  width: 40px;
  height: 40px;
  padding: 0px 20px;
}
.enter-item {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}
.enter-item text {
  text-align: center;
}

